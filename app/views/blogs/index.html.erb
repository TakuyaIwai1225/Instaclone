<div class="container">
  
  <div id="new-blog-link">
    <%= link_to '投稿する', new_blog_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-xs-12 col-md-12 blog-panel">
        <h2><%= blog.title %></h2>
        <p><%= blog.content %></p>
        <p>投稿者: <%= blog.user.name %></p>
          <div class="blog-links">
            <%= link_to 'Show', blog, class: 'btn btn-default' %>
            
            <% if current_user.id == blog.user.id %>
              <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-info' %> |
              <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <h1>
    お気に入り
  </h1>

  <div class="row">
    <% @favorite_blogs.each do |blog| %>
      <div class="col-xs-12 col-md-12 blog-panel">
        <h2>title: <%= blog.title %></h2>
        <p>Image <%= image_tag blog.image %></p>
        <p>投稿者: <%= blog.user.name %></p>
        <div class="blog-links">
          <%= link_to 'Show', blog, class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
